    common_words | pick {word_count2} from commons with dups
    all_words | rest_words + common_words
    shuffled_up | shuffle(all_words)
    
    first | pick 1 from scifi_words
    first_titled | title(first)
    
    final | first_titled + " " + :pack(shuffled_up)
    final.trim + ". "
