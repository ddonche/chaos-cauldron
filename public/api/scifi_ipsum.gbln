act scifi_ipsum_paragraph
    sentence_count | pick 1 from 3...7
    sentences | []
    repeat sentence_count
        s | scifi_ipsum_sentence()
        put_last!(sentences, s)
    xx
    :pack(sentences)
xx

act scifi_ipsum
    para_count | pick 1 from 2...4
    repeat para_count
        say scifi_ipsum_paragraph()
        say ""
    xx
xx

